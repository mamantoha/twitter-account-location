{
  "manifest_version": 3,
  "name": "Twitter Account Location",
  "version": "1.0.3",
  "description": "Show account based location",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": ["https://x.com/*"],
  "icons": {
    "16": "assets/logo.svg",
    "32": "assets/logo.svg",
    "48": "assets/logo.svg",
    "128": "assets/logo.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitter Location"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["src/cacheManager.js", "src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/pageScript.js"],
      "matches": ["https://x.com/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "twitter-account-location@mamantoha.com",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
