{
  "manifest_version": 3,
  "name": "Twitter Account Location",
  "version": "1.0.1",
  "description": "Show account based location",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"],
  "icons": {
    "16": "assets/logo.png",
    "32": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitter Location"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["cacheManager.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pageScript.js"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ]
}
